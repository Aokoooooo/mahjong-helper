  "name": "mahjong-helper",
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write {src,test}/**/*.{js,ts,json}",
    "lint": "cross-env yarn prettier && tslint --fix 'src/**/*.ts'&& tslint --fix 'test/**/*.ts'",
    "prepublishOnly": "cross-env node ./scripts/prepublish.js && yarn tsc && yarn webpack"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.149",
    "cross-env": "^5.2.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "files": [
    "dist",
    "src",
    "min",
    "LICENSE",
    "package.json",
    "readme.md"
  ]
}
