  "name": "mahjong-helper",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write src/**/*.{js,ts,json}",
    "lint": "cross-env yarn prettier && tslint --fix 'src/**/*.ts'",
    "prepublishOnly": "cross-env node ./scripts/prepublish.js && yarn tsc"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "package.json",
    "readme.md"
  ]
}
